<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  <mapper namespace="com.peridot.mapper.MemberMapper">
		<insert id="memberJoin">
	  		insert into user_ values(#{userNo}, #{userFirstName}, #{userLastName}, #{userEmail}, #{userPass}, #{userPhone}, #{admin}, #{userEmailCheck}, #{userPassCheck},sysdate )
	
	  	</insert>
	  	
	  	<!-- 아이디 중복검사 -->
	  	<select id="idCheck" resultType="int">
	  	
	  		select count(*) from user_ where memberEmail = #{memberEmail}
	  	
	  	</select>
	  	<!-- 로그인 -->
      	<select id="memberLogin" resultType="com.peridot.vo.MemberVO">
      		select userNo, userFirstname, userLastname, admin, userDate from user_ where userEmail = #{userEmail} and userPass=#{userPass};
      	</select>
	  	
  </mapper>
  
  